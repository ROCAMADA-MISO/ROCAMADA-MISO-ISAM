<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/prizesOverviewFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.vinilos.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_overviewFragment"
            app:destination="@id/overviewFragment" />
        <action
            android:id="@+id/action_homeFragment_to_prizesOverviewFragment"
            app:destination="@id/prizesOverviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.vinilos.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/overviewFragment"
        android:name="com.example.vinilos.artists.overview.OverviewFragment"
        android:label="OverviewFragment"
        tools:layout="@layout/fragment_overview">
        <action
            android:id="@+id/action_overviewFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.vinilos.artists.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="selectedArtist"
            app:argType="com.example.vinilos.artists.network.Artist" />
    </fragment>
    <fragment
        android:id="@+id/prizesOverviewFragment"
        android:name="com.example.vinilos.prizes.overview.PrizesOverviewFragment"
        android:label="PrizesOverviewFragment" />
</navigation>